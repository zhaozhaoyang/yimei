.content {
  width: 100%;
  height: 355rpx;
  background-color: #1197f6;
  color: #fff;
  font-size: 30rpx;
  position: relative;
}

.content .title {
  margin-left: 40rpx;
  padding-top: 40rpx;
}

.content .detail {
  width: 160rpx;
  height: 60rpx;
  font-size: 28rpx;
  background-color: #f18c16;
  text-align: center;
  border-radius: 48rpx;
  line-height: 60rpx;
  position: absolute;
  top: 40rpx;
  right: 40rpx;
}

.content .amount {
  font-weight: 700;
  font-size: 60rpx;
  position: absolute;
  left: 40rpx;
  bottom: 60rpx;
}

.recharge {
  width: 88%;
  height: 77rpx;
  background-color: #1197f6;
  border-radius: 70rpx;
  margin: 65rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  line-height: 77rpx;
}

.withdraw {
  width: 88%;
  height: 77rpx;
  background-color: #eee;
  border-radius: 70rpx;
  margin: 35rpx auto 0;
  text-align: center;
  font-size: 30rpx;
  color: #1197f6;
  line-height: 77rpx;
}
